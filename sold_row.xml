<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/sold_itemcardimage"
            android:layout_alignParentLeft="true"
            android:src="@drawable/sold_icon"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sold_carditemname"
            android:text="hello fucker"
            android:textStyle="bold"
            android:layout_toRightOf="@id/sold_itemcardimage"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sold_itemcardesc"
            android:layout_toRightOf="@id/sold_itemcardimage"
            android:layout_below="@id/sold_carditemname"
            android:text="Description"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sold_minBidprice"
            android:text="Bid Price"
            android:layout_toRightOf="@id/sold_itemcardimage"
            android:layout_below="@id/sold_itemcardesc"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sold_bid_button"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/sold_minBidprice"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"
            app:cornerRadius="@dimen/fab_margin"
            android:text="Bid"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>