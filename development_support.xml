<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/suppprt_tooolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/support"
                android:elevation="0dp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/pt_sans_narrow"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </com.google.android.material.appbar.AppBarLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Me Something..."
            android:fontFamily="@font/pt_sans_caption"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:padding="@dimen/fab_margin"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/buy_coffee"
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/card_shape">
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_coffee"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coffee"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/buy_pepsi"
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/pepsi_shape">
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_pepsi"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pepsi"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:id="@+id/buy_cookie"
                android:layout_below="@+id/buy_coffee"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/cookie_shape"
                    >
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_cookie"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cookie"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:id="@+id/buy_meal"
                android:layout_below="@+id/buy_pepsi"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/meal_shape">
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_full_meal"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Meal"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:id="@+id/buy_tshirt"
                android:layout_below="@id/buy_cookie"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/tshirt_shape">
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_tshirt"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T-Shirt"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/cardwidth"
                android:layout_height="@dimen/cardheight"
                android:id="@+id/true_giver"
                android:layout_below="@id/buy_meal"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/true_shape">
                    <ImageView
                        android:layout_width="@dimen/image"
                        android:layout_height="@dimen/image"
                        android:layout_gravity="center"
                        android:src="@drawable/sold_true_giver"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="True Giver"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/pt_sans_caption"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thank You"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pt_sans_caption"
                    android:textColor="@android:color/background_dark"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thanknote"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:text="@string/thankmessage"
                    android:fontFamily="@font/pt_sans_caption"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>






</ScrollView>