<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sold_alert_shape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What you're looking for?"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="@font/pt_sans_caption"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding">
        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:src="@drawable/sold_electronics"/>

        <TextView
            android:id="@+id/sold_electrons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Electronics"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding">
        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:src="@drawable/sold_furniture"/>

        <TextView
            android:id="@+id/sold_furniture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Furniture"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding">
        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:src="@drawable/sold_grocery"/>

        <TextView
            android:id="@+id/sold_groceries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Groceries"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding">
        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:src="@drawable/sold_homeappliance"/>

        <TextView
            android:id="@+id/sold_homeapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Home Appliance"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding">
        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:src="@drawable/sold_motorvehicle"/>

        <TextView
            android:id="@+id/sold_motor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:fontFamily="@font/pt_sans_caption"
            android:text="Motor Vehicle"
            android:textStyle="bold"/>
    </LinearLayout>





</LinearLayout>