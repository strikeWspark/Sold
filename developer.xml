<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/developertoolbar"
                app:title="@string/developer"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@color/colorPrimary"/>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/sold_developer"/>
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@android:color/transparent"
                android:src="@drawable/sold_anonymous"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="215dp"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saurabh Tripathi"
            android:textStyle="bold"
            android:fontFamily="@font/pt_sans_caption"
            android:textColor="@android:color/background_dark"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer, Designer"
            android:fontFamily="@font/pt_sans_caption"
            android:layout_gravity="center"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science Engineer"
            android:fontFamily="@font/pt_sans_caption"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:textColor="@android:color/background_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                android:id="@+id/githubPage"
                android:src="@drawable/sold_github"
                android:layout_margin="@dimen/fab_margin"
                android:padding="@dimen/padding"/>

            <ImageView
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                android:id="@+id/linkedIn"
                android:src="@drawable/linkedin"
                android:layout_margin="@dimen/fab_margin"
                android:padding="@dimen/padding"/>

            <ImageView
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                android:id="@+id/gmail"
                android:src="@drawable/sold_mail"
                android:layout_margin="@dimen/fab_margin"
                android:padding="@dimen/padding"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/developerSupport"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/support"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            app:cornerRadius="36dp"
            android:fontFamily="@font/pt_sans_narrow"
            android:backgroundTint="@color/textColor"
            android:textColor="@android:color/background_dark"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thank You"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pt_sans_caption"
                    android:textColor="@android:color/background_dark"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thanknote"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:text="@string/thankmessage"
                    android:fontFamily="@font/pt_sans_caption"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>