<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sold_signup_toolbar"
                app:title="@string/signup_button"/>


        </com.google.android.material.appbar.AppBarLayout>



        <ImageButton
            android:id="@+id/sold_profile_add"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@color/cardview_shadow_start_color"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_signup_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_signup_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_signup_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_signup_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_signup_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="@string/password"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_signup_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_signup_confirm_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_sign_confirm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/sold_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <RadioButton
                android:id="@+id/sold_male_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"/>

            <RadioButton
                android:id="@+id/sold_female_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"/>
            <RadioButton
                android:id="@+id/sold_others_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_upi_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/upi"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_upi_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_location_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sold_signup_mobile_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sold_signup_mobile_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sold_signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/signup_button"
            app:cornerRadius="@dimen/fab_margin"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>
    </LinearLayout>

</ScrollView>